<?xml version="1.0" encoding="UTF-8"?>
<view name="nonpo-indexing-view" template="nonpo-tpl.xml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://managedpay.net/schemas/view.xsd">

	<labels default="en">
		<locale name="en">
		</locale>
	</labels>

	<section-overrides>	
	</section-overrides>
	
	<property-overrides>
		<lookup name="routingCode" visible="false"/>
	</property-overrides>

	<lineItem-overrides> 
			<lookup name="accountCode" readonly="false" inputReadonly="false"/>
	</lineItem-overrides>

	<action-overrides>
		<iconAction name="editRouting" icon="/images/ico-route-w24.png" width="24" height="24" readOnlyLink="javascript:openViewRoutingWindow('$contextPath$', '$wobNumber$', 'nonPo')" link="javascript:openRoutingWindow('$contextPath$', '$wobNumber$', 'nonPo', 'MP_Approver1')" alwaysActive="true" readonly="false" visible="false"/>			
	</action-overrides>

	<hidden-overrides>
		<hidden name="processInformation.response" defaultValue="Complete"/>
	</hidden-overrides>

	 <documentRejection>
		<rejectionReasons>
			<reason name="Reject" commentsRequired="true" note="message.returnException">
				<subReason name="Duplicate invoice"/>
				<subReason name="Incomplete documentation"/>
				<subReason name="Not a Genuine Invoice"/>
				<subReason name="Other"/>
			</reason>
			<reason name="Rescan" commentsRequired="true" note="message.rescan">
			</reason>
			<reason name="Vendor Maintenance" commentsRequired="true" note="message.returnVendorMaintenance">
			</reason>
			<reason name="Terminate" commentsRequired="true" note="message.terminate">
			</reason>
			<reason name="Duplicate" commentsRequired="true" note="message.duplicatereivew">  </reason>
		</rejectionReasons>
	</documentRejection>

